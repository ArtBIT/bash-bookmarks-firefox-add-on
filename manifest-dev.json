{
  "manifest_version": 2,
  "name": "Bash-Bookmarks (Dev)",
  "description": "Bash-Bookmarks is a browser extension that allows you to use a plain-text bookmarks manager bash-bookmarks (github.com/artbit/bash-bookmarks) - DEVELOPMENT VERSION",
  "version": "0.0.5",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "tabs", 
    "storage",
    "notifications"
  ],
  "browser_action": {
    "default_title": "Bash Bookmarks (Dev)",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "artbit-dev@djordjeungar.com",
      "strict_min_version": "120.0"
    }
  }
}
